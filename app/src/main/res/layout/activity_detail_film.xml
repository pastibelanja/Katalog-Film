<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginBottom="@dimen/activity_vertical_margin"
    android:layout_marginRight="@dimen/activity_horizontal_margin"
    android:layout_marginLeft="@dimen/activity_horizontal_margin"
    android:layout_marginTop="@dimen/activity_vertical_margin"
    tools:context=".DetailFilm">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/img_detail_film"
            android:layout_width="130dp"
            android:layout_height="180dp"
            android:src="@drawable/poster_avengerinfinity"
            android:scaleType="fitXY"/>

        <TextView
            android:id="@+id/tv_detail_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_film"
            android:layout_marginStart="22dp"
            android:text="@string/name_films"
            android:textColor="@color/colorPrimary"
            android:textStyle="bold"
            android:textSize="17sp"/>

        <TextView
            android:id="@+id/tv_detail_date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_film"
            android:layout_below="@id/tv_detail_name"
            android:layout_marginTop="5dp"
            android:layout_marginStart="22dp"
            android:text="Friday, 28 June 2019"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/tv_detail_rate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@id/img_detail_film"
            android:layout_below="@id/tv_detail_date"
            android:layout_marginTop="5dp"
            android:layout_marginStart="22dp"
            android:text="100 %"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <View
            android:layout_width="match_parent"
            android:layout_height="3dp"
            android:background="#bbb"
            android:layout_below="@id/img_detail_film"
            android:layout_marginTop="10dp"/>

        <TextView
            android:id="@+id/txt_overview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_detail_film"
            android:layout_marginTop="15dp"
            android:text="Overview"
            android:textStyle="bold"
            android:textColor="@color/colorAccent"
            android:textSize="25sp"/>

        <TextView
            android:id="@+id/tv_detail_descrip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/txt_overview"
            android:layout_marginTop="3dp"
            android:text="@string/lorem"/>
    </RelativeLayout>

</ScrollView>