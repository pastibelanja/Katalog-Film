<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <ImageView
        android:id="@+id/img_film"
        android:layout_width="100dp"
        android:layout_height="150dp"
        android:scaleType="fitXY"
        android:src="@drawable/poster_avengerinfinity"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_toEndOf="@id/img_film"
        android:text="Name Film"
        android:textSize="17sp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimary"/>
    <TextView
        android:id="@+id/txt_date"
        android:layout_below="@id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/img_film"
        android:text="Friday, 28 jun 2019"
         />

    <TextView
        android:id="@+id/txt_rate"
        android:layout_below="@id/txt_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="8dp"
        android:layout_toEndOf="@id/img_film"
        android:text="0.0"
        android:textSize="17sp"
        />

    <TextView
        android:id="@+id/txt_descrip"
        android:layout_below="@id/txt_rate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="22dp"
        android:layout_marginTop="5dp"
        android:layout_toEndOf="@id/img_film"
        android:text="@string/lorem"
        android:ellipsize="end"
        android:lines="2"/>

</RelativeLayout>